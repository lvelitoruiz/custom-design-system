{
  "name": "vue",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/vue/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/vue"],
      "options": {
        "command": "vite build",
        "cwd": "packages/vue"
      }
    },
    "lint": {
      "executor": "@nx/eslint:eslint",
      "options": {
        "lintFilePatterns": ["packages/vue/**/*.{ts,vue}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/vue/jest.config.ts"
      }
    }
  },
  "tags": ["scope:vue", "type:ui"]
}